<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test_Login_PF.MVVM.Views.SignUpView">
    
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Start">
            <Entry x:Name="FullNameEntry" Placeholder="Full Name" Text="{Binding FullName}"/>
            <Entry x:Name="EmailEntry" Placeholder="Email" Text="{Binding Email}"/>
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" Text="{Binding ConfirmPassword}"/>
            <Button Text="Register" Command="{Binding RegisterCommand}"/>
            <Label Text="{Binding Message}" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>